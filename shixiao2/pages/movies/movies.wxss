.container{
  background-color: #f2f2f2;
}
.ma{
  margin-bottom: 20rpx;
}

.search{
  background-color: #f2f2f2;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.search-img{
  margin: auto 0 auto 20rpx;
}
.search-close{
  height: 40rpx;
  width:40rpx;
  opacity: 0.8;
  margin: auto 0 auto 0;
}
.placeholder{
  font-size:14px;
  color: #d1d1d1;
  margin-left:20rpx;
}
.search input{
  height: 100%;
  width:600rpx;
  margin-left: 20rpx;
  font-size:28rpx;
}

.search-pannel{
  top:80rpx;
  position: absolute;
}
