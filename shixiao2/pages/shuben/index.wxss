/* pages/shuben/index.wxss */
 .container{
   display: flex;
   flex-direction: column;
   align-items: center;
   width: 100%;
 }
 .sub-container {
   display: flex;
   flex-direction: column;
   align-items: center;
   background-color: #f5f5f5;
   margin-top: 100rpx;
 }
 .box {
   display: flex;
   flex-direction: row;
   justify-content: center;
   align-items: center;
   border-radius: 50px;
   background-color: #f5f5f5;
   height: 68rpx;
   width: 700rpx;
   color: #999999;
 }
 .box image {
   width:26rpx;
   height:26rpx;
 }
 .header {
   position: fixed;
   background-color: #ffffff;
   height: 100rpx;
   width: 100%;
   border-top:1px solid #f5f5f5;
   border-bottom: 1px solid #f5f5f5;
   display: flex;
   flex-direction: row;
   justify-content: center;
   align-items: center;
   box-shadow: 0 0 3px 0 #e3e3e3;
   z-index: 99;
 }
 .head-img {
   width:106rpx;
   height:34rpx;
   margin-top:40rpx;
 }
 .book-container{
   margin-top:10rpx;
   display: flex;
   flex-direction: row;
   justify-content: space-around;
   flex-wrap: wrap;
    padding: 0 90rpx 0 90rpx;
    
 }