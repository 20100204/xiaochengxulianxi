/* pages/posts/posts.wxss */
.post-container{
  display: flex;
  flex-direction: column;
  margin-top:20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top:1px solid #ededed;
  border-bottom:1px solid #ededed;
  padding-bottom: 10rpx;
}
.post-author-data{
  margin-top:10rpx;
  margin-bottom: 20 rpx;
  margin-left: 10 rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.post-author{
  height: 60rpx;
  width:60rpx;
  /* vertical-align: middle; */
}
.post-date{
  margin-left:20rpx;
  /* vertical-align: middle; */
  font-size:26rpx;
}
.post-title{
  font-size:34rpx;
  font-weight: 600;
  margin-bottom: 10px;
  margin-left: 6px;
  margin-top:6px;
  color:#333;
}
.post-img{
  width:100%;
  height: 340rpx;
  margin-bottom:15px;
}
.post-content{
  font-size:28rpx;
  color:#666;
  letter-spacing: 2rpx;
  margin-left:20rpx;
  margin-bottom: 20rpx;
}
.post-like{ 
  display:flex;
  flex-direction: row;
  align-items: center;
}
.post-like-img{
    margin-left:20rpx;
  width: 32rpx;
  height:32rpx;
}
.post-like-txt{
 font-size:20rpx;
 margin-left:4px;
}
